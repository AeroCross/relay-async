<% unless notice.blank? %>
    <div class="alert alert-<%= flash[:type].present? ? flash[:type] : 'info' %>">
      <%= notice %>
    </div>
<% end %>

<div class="row">
  <div class="col-lg-12">

    <p>
    <strong>ID:</strong>
    <%= @user.id%>
    </p>

    <p>
      <strong>Name:</strong>
      <%= @user.fullname %>
    </p>

    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Role:</strong>
      <%= @user.role %>
    </p>

    <div class="btn-group">
      <a href="<%= url_for(edit_user_path) %>" class="btn btn-default">Edit</a>
      <a href="<%= url_for(users_path) %>" class="btn btn-default">Back</a>
    </div>
  </div>
</div>