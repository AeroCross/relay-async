<div class="col-lg-4 col-lg-offset-4">
  <h4>Log in</h4>
  <hr />

  <% unless notice.blank? %>
    <div class="alert alert-<%= flash[:type] %>">
      <%= notice %>
    </div>
  <% end %>

  <%= form_tag '/access/attempt', method: 'post' do %>
      <div class="form-group">
        <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control', type: :email %>
      </div>

      <div class="form-group">
        <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        <p class="help-block"><a href="#">Forgot your password?</a></p>
      </div>

      <div class="btn-group pull-right" role="group">
        <%= link_to 'Sign up', access_sign_up_path, class: 'btn btn-default' %>
        <%= button_tag 'Log in', type: 'submit', class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>