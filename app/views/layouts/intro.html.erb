<!DOCTYPE html>
<html>
<head>
  <title>Hi! Welcome to Relay.</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<!-- ain't nobody got time for calling more external stylesheets -->
<style>
    body {
        padding: 0;
    }

    a:hover {
        cursor: pointer;
    }
</style>

<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6 col-lg-push-3">
      <%= yield %>
    </div>
  </div>
</div>


<script type="text/javascript">
    var show = $('#show-more-info');
    var info = $('#more-info');

    $(document).ready(function() {
        show.on('click', function() {
            console.log('clicked');
            $(this).fadeOut(300, function(){
                console.log('faded out');
                info.removeClass('hidden').hide().fadeIn(300, function() {
                    console.log('faded in');
                });
            });
        });
    });
</script>

</body>
</html>