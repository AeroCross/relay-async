# only if needed — DigitalOcean apparently doesn't need this one
# DATABASE_URL: "mysql2://myuser:mypass@localhost/somedatabase"

# used by all Rails app: use rake secret to generate one:
SECRET_KEY_BASE: 'long string generated by rake secret'

# who should get a notification for all emails?
# for research purposes only — a better way should be developed down the track
NOTIFY_TO: 'admin@yourdomain.net'

# production-only variables
production:
  # since production uses nginx or apache, set to false
  RAILS_SERVE_STATIC_FILES: 'false'

  # production database uses this one
  # development doesn't have one because it's irrelevant to have local information available
  RELAY_DATABASE_PASSWORD: 'password'

  # sync options
  APP_DOMAIN: 'yourdomain.net'
  SYNC_ROOT: 'http://yourdomain.net:8080'

  # mailer options
  SMTP_USER: 'notifications@yourdomain.net'
  SMTP_PASSWORD: 'password'
  SMTP_ADDRESS: 'smtp.yourdomain.net'
  SMTP_DOMAIN: 'yourdomain.net'
  SMTP_PORT: '25'
  SMTP_AUTH: 'plain'

# development-only variables
development:
  # since development uses webrick, set to true
  RAILS_SERVE_STATIC_FILES: 'true'

  # mailtrap.io configuration
  MAILTRAP_USER: 'user'
  MAILTRAP_PASSWORD: 'password'

  # live chat links
  SYNC_ROOT: 'http://localhost:8080'